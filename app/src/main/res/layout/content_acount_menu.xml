<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_acount_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.uxie.app.uxie.AcountMenuActivity"
    tools:showIn="@layout/activity_acount_menu"
    android:background="@color/colorPrimary">

    <ImageView
        app:srcCompat="@mipmap/uxie_logo_splash"
        android:layout_marginTop="30dp"
        android:id="@+id/imageView27"
        android:layout_height="96dp"
        android:layout_width="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="INICIAR SESION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_sesion"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/faceboolLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_loginFB"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"

            />
    </LinearLayout>

</RelativeLayout>
